<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8D0D0"
    android:stretchColumns="2">


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="sans-serif-black"
            android:text="PENERAPAN TABLE LAYOUT"
            android:textColor="#101010"
            android:textSize="24sp" />

    </TableRow>

    <TableRow
        android:layout_width="476dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:text="DATA MAHASISWA"
            android:textColor="#101010" />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30sp"
            android:layout_column="0"
            android:text="NOBP"
            android:textColor="#101010" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:layout_column="1"
            android:text="NAMA"
            android:textColor="#101010" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="PRODI"
            android:textColor="#101010" />


    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1002"
            android:textColor="#101010" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Aulia Nofika"
            android:textColor="#101010" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MI"
            android:textColor="#101010" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1020"
            android:textColor="#101010" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Nopalina"
            android:textColor="#101010" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MI"
            android:textColor="#101010" />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1030"
            android:textColor="#101010" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Lulu naurah"
            android:textColor="#101010" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MI"
            android:textColor="#101010" />
    </TableRow>

    <TableRow
        android:baselineAligned="false"
        android:nestedScrollingEnabled="false"
        android:outlineProvider="paddedBounds">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3020"
            android:textColor="#101010" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="Salsabila zahra"
            android:textColor="#101010" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MI"
            android:textColor="#101010" />
    </TableRow>

    <TableRow
        android:layout_width="476dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:text="SILAHKAN INPUT DATA MAHASISWA"
            android:textColor="#101010" />

    </TableRow>

    <TableRow android:layout_marginTop="10sp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="NoBP"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Prodi"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow android:layout_gravity="center">

        <Button
            android:id="@+id/submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:backgroundTint="#A25587"
            android:text="Submit"
            app:cornerRadius="10sp" />
    </TableRow>

</TableLayout>

